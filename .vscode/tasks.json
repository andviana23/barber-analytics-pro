{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ğŸš€ Dev Server",
      "type": "shell",
      "command": "pnpm",
      "args": ["dev"],
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "pattern": {
          "regexp": "^([^\\s].*?):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE.*ready in",
          "endsPattern": "ready in \\d+ms"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "ğŸ—ï¸ Build Production",
      "type": "shell",
      "command": "pnpm",
      "args": ["build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "ğŸ§ª Run Tests",
      "type": "shell",
      "command": "pnpm",
      "args": ["test"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "ğŸ­ Run E2E Tests",
      "type": "shell",
      "command": "pnpm",
      "args": ["test:e2e"],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "âœ¨ Lint & Format",
      "type": "shell",
      "command": "pnpm",
      "args": ["lint:fix", "&&", "pnpm", "format"],
      "problemMatcher": "$eslint-stylish",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "ğŸ” Audit Design System",
      "type": "shell",
      "command": "pnpm",
      "args": ["audit:design-system"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "ğŸ¨ Migrate to Design System",
      "type": "shell",
      "command": "pnpm",
      "args": ["migrate:design-system"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
