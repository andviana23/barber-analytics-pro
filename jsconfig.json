{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "strict": false,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@atoms/*": ["./src/atoms/*"],
      "@molecules/*": ["./src/molecules/*"],
      "@organisms/*": ["./src/organisms/*"],
      "@templates/*": ["./src/templates/*"],
      "@pages/*": ["./src/pages/*"],
      "@services/*": ["./src/services/*"],
      "@repositories/*": ["./src/repositories/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@dtos/*": ["./src/dtos/*"],
      "@utils/*": ["./src/utils/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@config/*": ["./src/config/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "vite.config.js",
    "vite.config.test.ts",
    "playwright.config.ts",
    "eslint.config.js",
    "tailwind.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "playwright-report",
    "playwright-artifacts"
  ]
}
