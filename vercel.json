{
  "rewrites": [
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "OPENAI_API_KEY": "@openai_api_key",
    "OPENAI_MODEL": "gpt-4o-mini",
    "OPENAI_MODEL_FALLBACK": "gpt-3.5-turbo",
    "OPENAI_COST_ALERT_THRESHOLD": "80",
    "OPENAI_MAX_TOKENS_PER_REQUEST": "2000",
    "TELEGRAM_BOT_TOKEN": "@telegram_bot_token",
    "TELEGRAM_CHAT_ID": "@telegram_chat_id",
    "TELEGRAM_WEBHOOK_SECRET": "@telegram_webhook_secret",
    "CRON_SECRET": "@cron_secret",
    "HEALTH_CHECK_ENABLED": "true",
    "HEALTH_CHECK_INTERVAL": "300000",
    "HEALTH_CHECK_SEND_ALERTS": "true",
    "ANALYTICS_BATCH_SIZE": "5",
    "ANALYTICS_MAX_PARALLEL": "3",
    "ANALYTICS_ETL_TIMEOUT": "600000",
    "ANALYTICS_ANOMALY_LOOKBACK_DAYS": "30",
    "ANALYTICS_ANOMALY_ZSCORE_THRESHOLD": "2",
    "CACHE_ANALYSIS_TTL": "86400",
    "CACHE_KPI_TTL": "300",
    "CACHE_PROVIDER": "memory",
    "RETRY_MAX_ATTEMPTS": "3",
    "RETRY_INITIAL_DELAY": "1000",
    "RETRY_BACKOFF_MULTIPLIER": "2",
    "CIRCUIT_BREAKER_FAILURE_THRESHOLD": "5",
    "CIRCUIT_BREAKER_RESET_TIMEOUT": "60000",
    "LOG_LEVEL": "info",
    "ENABLE_STRUCTURED_LOGGING": "true",
    "ENABLE_TRACE_IDS": "true"
  },
  "crons": [
    {
      "path": "/api/cron/etl-diario",
      "schedule": "0 3 * * *",
      "description": "ETL Diário - Processa métricas às 03:00 BRT"
    },
    {
      "path": "/api/cron/relatorio-semanal",
      "schedule": "0 6 * * 1",
      "description": "Relatório Semanal - Segunda-feira às 06:00 BRT"
    },
    {
      "path": "/api/cron/fechamento-mensal",
      "schedule": "0 7 1 * *",
      "description": "Fechamento Mensal - 1º do mês às 07:00 BRT"
    },
    {
      "path": "/api/cron/enviar-alertas",
      "schedule": "*/15 * * * *",
      "description": "Envio de Alertas - A cada 15 minutos"
    },
    {
      "path": "/api/cron/health-check",
      "schedule": "*/5 * * * *",
      "description": "Health Check - A cada 5 minutos"
    },
    {
      "path": "/api/cron/validate-balance",
      "schedule": "0 4 * * *",
      "description": "Validação de Saldo Acumulado - Diariamente às 04:00 BRT (após ETL)"
    },
    {
      "path": "/api/cron/gerar-despesas-recorrentes",
      "schedule": "0 2 * * *",
      "description": "Geração de Despesas Recorrentes - Diariamente às 02:00 BRT (antes do ETL)"
    },
    {
      "path": "/api/cron/relatorio-diario",
      "schedule": "0 21 * * *",
      "description": "Relatório Diário de Receitas - Todos os dias às 21:00 BRT (com IA ApoIA)"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; connect-src 'self' https://*.supabase.co https://api.openai.com https://api.telegram.org wss://*.supabase.co; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; object-src 'none'; base-uri 'self'; form-action 'self'; frame-ancestors 'none'; upgrade-insecure-requests;"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=(), payment=(), usb=(), magnetometer=(), gyroscope=(), accelerometer=()"
        }
      ]
    }
  ]
}
